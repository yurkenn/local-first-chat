{
    "installCommand": "npm install --legacy-peer-deps",
    "buildCommand": "npm run build && mv dist/index.html dist/app.html && cp dist/landing.html dist/index.html",
    "outputDirectory": "dist",
    "headers": [
        {
            "source": "/((?!assets/).*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-cache, no-store, must-revalidate"
                },
                {
                    "key": "Pragma",
                    "value": "no-cache"
                },
                {
                    "key": "Expires",
                    "value": "0"
                }
            ]
        },
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ],
    "rewrites": [
        {
            "source": "/app/:path*",
            "destination": "/app.html"
        },
        {
            "source": "/app",
            "destination": "/app.html"
        }
    ]
}